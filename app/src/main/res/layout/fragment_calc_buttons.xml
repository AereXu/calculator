<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="6"
    android:rowCount="10"
    tools:context=".CalcMainActivityFragment">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButOne"
        android:layout_column="0"
        android:layout_row="1"
        android:text="1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButTwo"
        android:layout_column="1"
        android:layout_row="1"
        android:text="2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButThr"
        android:layout_column="2"
        android:layout_row="1"
        android:text="3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButFou"
        android:layout_column="0"
        android:layout_row="2"
        android:text="4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButFiv"
        android:layout_column="1"
        android:layout_row="2"
        android:text="5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButSix"
        android:layout_column="2"
        android:layout_row="2"
        android:text="6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButSev"
        android:layout_column="0"
        android:layout_row="3"
        android:text="7" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButEig"
        android:layout_column="1"
        android:layout_row="3"
        android:text="8" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButNin"
        android:layout_column="2"
        android:layout_row="3"
        android:text="9" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButZer"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="0" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButDot"
        android:layout_column="2"
        android:layout_row="4"
        android:text="." />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButMul"
        android:layout_column="3"
        android:layout_row="2"
        android:text="×" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButDiv"
        android:layout_column="3"
        android:layout_row="1"
        android:text="/" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButAdd"
        android:layout_column="3"
        android:layout_row="4"
        android:text="+" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButSub"
        android:layout_column="3"
        android:layout_row="3"
        android:text="-" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButDel"
        android:layout_column="0"
        android:layout_row="0"
        android:text="←" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButCle"
        android:layout_column="1"
        android:layout_row="0"
        android:text="CE" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButClr"
        android:layout_column="2"
        android:layout_row="0"
        android:text="C" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButSgn"
        android:layout_column="3"
        android:layout_row="0"
        android:text="±"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButSqr"
        android:layout_column="4"
        android:layout_row="0"
        android:text="√"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButPer"
        android:layout_column="4"
        android:layout_row="1"
        android:text="%" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButRec"
        android:layout_column="4"
        android:layout_row="2"
        android:text="1/x" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mButEql"
        android:layout_column="4"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:text="="
        />

</GridLayout>
